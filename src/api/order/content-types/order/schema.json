{
  "kind": "collectionType",
  "collectionName": "orders",
  "info": {
    "singularName": "order",
    "pluralName": "orders",
    "displayName": "Order"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "email": {
      "type": "email",
      "required": true
    },
    "orderItems": {
      "type": "component",
      "repeatable": true,
      "component": "order-item.order-item",
      "required": true
    },
    "shippingMethod": {
      "type": "enumeration",
      "required": true,
      "enum": ["normal", "express", "onSite"]
    },
    "standing": {
      "type": "enumeration",
      "default": "unpaid",
      "enum": ["unpaid", "paid", "shipped", "arrived", "completed"]
    },
    "address": {
      "type": "component",
      "component": "address.address",
      "repeatable": false,
      "required": true
    },
    "totalPrice": {
      "type": "decimal",
      "required": true
    },
    "name": {
      "type": "string",
      "required": true
    },
    "date": {
      "type": "datetime",
      "required": true
    },
    "stripeId": {
      "type": "string",
      "unique": true
    },
    "trackingCode": {
      "type": "string"
    },
    "accessToken": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "phoneNumber": {
      "type": "string"
    }
  }
}
